-- factorial
(define fact
  (fun (x)
    (assert (: x Int))                  -- assert x to be an integer
    (if (= x 0) 1 (* x (fact (- x 1))))))

(fact 5)


------------- mutural recursive functions -------------
(define even
  (fun (x)
    (assert (: x Int))
    (if (= x 0)
        true
        (if (= x 1)
            false
            (not (odd (- x 1)))))))

(define odd
  (fun (x)
    (assert (: x Int))
    (if (= x 0)
        false
        (if (= x 1)
            true
            (not (even (- x 1)))))))

(odd 10)


------------ records -----------
(record A
  [:x 10] y)

-- B inherits A's fields
(record B (A)
        z)

(B :y 20 :z 30)


(define f 
  (fun ([:x (+ 1 2)] y)
    (assert (: x (U Int Float))
            (: y Int))
    (+ x y)))

(f :y 2)
